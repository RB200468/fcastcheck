<head>
    <!-- Stylesheets -->
    <link rel="stylesheet" href="static/styles/navbar.css">

    <!-- Scripts -->
    <script src="static/scripts/switchTheme.js" defer></script>
</head>

<nav>
    <ul>
        <li>
            <div class="active" onclick="toggleActive(this)">Chart1</div>
        </li>
        <li>
            <div onclick="toggleActive(this)">Chart2</div>
        </li>
        <li>
            <div onclick="toggleActive(this)">Chart3</div>
        </li>
        <li>
            <div class="theme-switch-btn" onclick="changeTheme()">
                <i class="bx bxs-sun" id="theme-icon"></i>
            </div>
        </li>
    </ul>
</nav>
<script>
    function toggleActive(element) {
        if (element.classList.contains('active')) {
            element.classList.remove('active');
        } else {
            document.querySelectorAll('nav ul li div').forEach(div => {
                div.classList.remove('active');
            });
            element.classList.toggle('active');
        }
    };
</script>